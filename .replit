run = "./start.sh"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["imagemagick"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 9000
externalPort = 9000

[deployment]
build = ["npm", "install", "&&", "npm", "run", "build"]
run = ["node", "start.js"]
deploymentTarget = "cloudrun"
ignorePorts = false

[deployment.environment]
NODE_ENV = "production"
PORT = "8080"

[[deployment.ports]]
name = "main"
internalPort = 8080
externalPort = 80
